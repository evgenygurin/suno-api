# Suno API Key - Get your API key from https://sunoapi.org/api-key
# This is required for all API requests
SUNO_API_KEY=your_suno_api_key_here

# ==============================================================================
# MCP Server Integrations - Model Context Protocol
# ==============================================================================

# GitHub MCP Integration
# Create PAT at: https://github.com/settings/tokens
# Required scopes: repo, workflow, read:org, read:user
GITHUB_MCP_PAT=ghp_your_github_personal_access_token

# Codegen.com Integration
# Get from: https://codegen.com/settings/api-keys
CODEGEN_API_KEY=your_codegen_api_key
CODEGEN_ORG_ID=your_organization_id
CODEGEN_REPO_ID=your_repository_id

# Context7 Documentation Service
# Optional API key for higher rate limits: https://context7.com
# CONTEXT7_API_KEY=your_context7_api_key

# Tavily Web Search
# Get from: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key

# ==============================================================================
# R2R Agent Configuration
# ==============================================================================

# R2R API Configuration
R2R_API_URL=http://localhost:7272
R2R_API_KEY=your_r2r_api_key

# Gemini API for R2R LLM
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# ==============================================================================
# CI/CD Integration Keys
# ==============================================================================

# Linear Integration (optional)
# Create at: https://linear.app/settings/api
LINEAR_API_KEY=your_linear_api_key

# CircleCI Integration (optional)
# Create at: https://app.circleci.com/settings/user/tokens
CIRCLECI_API_TOKEN=your_circleci_token

# Sentry Error Tracking & Monitoring
# ============================================================================
# Setup Instructions:
# 1. Create account at https://sentry.io
# 2. Create new project (or use existing)
# 3. Get DSN from: Project Settings â†’ Client Keys (DSN)
# 4. Get Auth Token from: https://sentry.io/settings/account/api/auth-tokens/
#    Required scopes: project:releases, project:write, org:read
# ============================================================================

# Sentry DSN - Client-side error tracking
# Used by Next.js to send errors to Sentry
# Format: https://PUBLIC_KEY@INGEST_DOMAIN/PROJECT_ID
SENTRY_DSN=https://your_public_key@o123456.ingest.us.sentry.io/123456789
NEXT_PUBLIC_SENTRY_DSN=https://your_public_key@o123456.ingest.us.sentry.io/123456789

# Sentry Organization & Project
# Used for CI/CD release creation and source map uploads
SENTRY_ORG=your_organization_slug
SENTRY_PROJECT=suno-api

# Sentry Auth Token - CI/CD and CLI operations
# Used by sentry-cli to create releases and upload source maps
# IMPORTANT: Keep this secret! Use CircleCI context in CI/CD
SENTRY_AUTH_TOKEN=sntryu_your_auth_token_here

# Environment identifier (development, staging, production)
SENTRY_ENVIRONMENT=development

# Performance Monitoring Settings
# Traces sample rate: 0.1 = 10% of transactions
# Lower in production to reduce quota usage
SENTRY_TRACES_SAMPLE_RATE=0.1

# Profiling sample rate: 0.1 = 10% of traces
# Set to 0 in production unless debugging performance
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ============================================================================
# Sentry Configuration Files:
# - .sentryrc - Local Sentry CLI configuration (DO NOT COMMIT)
# - CI_CD_DOCUMENTATION.md - Full integration guide
# ============================================================================

# ==============================================================================
# Python & MCP Configuration
# ==============================================================================

# Suppress harmless OpenTelemetry threading warnings during shutdown
# This prevents "RuntimeError: can't create new thread at interpreter shutdown"
# errors from the MCP proxy's OpenTelemetry logging handler
PYTHONWARNINGS=ignore::RuntimeError:threading

# Optionally disable OpenTelemetry entirely if not needed
# OTEL_SDK_DISABLED=true

# Prevent Python bytecode compilation (.pyc files)
PYTHONDONTWRITEBYTECODE=1
